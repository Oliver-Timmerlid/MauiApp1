<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiApp1.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{DynamicResource OffBlack}">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Image
                Source="loggo.png"
                HeightRequest="280"
                Aspect="AspectFit"
                HeightRequest="280"
                SemanticProperties.Description="Alvdalskt hej"
                Source="blackwhite.png" />
            <Button
                x:Name="StarBtn"
                Text="Start" 
                SemanticProperties.Hint="Start button to go to next page"
                Clicked="StartBtnClicked"
                HorizontalOptions="Center"
                BackgroundColor="{DynamicResource Teal9}"
                TextColor="{DynamicResource Gray100}"
                WidthRequest="100"
                HeightRequest="60"
                CornerRadius="10"
                BorderColor="{DynamicResource Gray100}"
                BorderWidth="3"
                FontSize="20" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
