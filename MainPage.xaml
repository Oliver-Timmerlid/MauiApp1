<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage"
             BackgroundColor="{DynamicResource OffBlack}">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
          
            <Image
                Source="blackwhite.png"
                HeightRequest="280"
                Aspect="AspectFit"
                SemanticProperties.Description="Alvdalskt hej"
                Margin="0,50,0,10" />
            <Button
                x:Name="StarBtn"
                Text="Start" 
                SemanticProperties.Hint="Start button to go to next page"
                Clicked="StartBtnClicked"
                HorizontalOptions="Center"
                BackgroundColor="{DynamicResource Gray100}"
                TextColor="{DynamicResource OffBlack}"
                WidthRequest="100"
                HeightRequest="60"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
