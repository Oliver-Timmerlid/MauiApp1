<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiApp1.NewPage1"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="NewPage1"
    BackgroundColor="{DynamicResource OffBlack}">

    <VerticalStackLayout>
        <Image
            Source="textloggo.png"
            HeightRequest="200"
            Aspect="AspectFit"
            SemanticProperties.Description="Alvdalskt hej"
            Margin="0,50,0,10" />
        <Label 
            Text="Här kan vi lägga viktiga andra saker :)"
            TextColor="{DynamicResource Gray100}"
            VerticalOptions="Center" />
        <Button
                x:Name="ReturnBtn"
                Text="Tillbaka" 
                SemanticProperties.Hint="Return button to go to main page"
                Command="{Binding ReturnCommand}"
                HorizontalOptions="Center"
                BackgroundColor="{DynamicResource Teal9}"
                TextColor="{DynamicResource Gray100}"
                WidthRequest="120"
                HeightRequest="60"
                CornerRadius="10"
                BorderColor="{DynamicResource Gray100}"
                BorderWidth="3"
                FontSize="20"
                Margin="0,50,0,10"/>
    </VerticalStackLayout>
</ContentPage>